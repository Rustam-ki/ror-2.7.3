<tr>
  <td class="text-center">
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="text-center"><%= test_level(test) %></td>
  <td class="text-center"><%= test.questions.count %></td>
  <td class="text-center"><%= link_to t('helpers.show'), admin_test_path(test), class: "btn btn-primary btn-sm" %></td>
  <td class="text-center">
    <%= link_to t('helpers.edit'),
                edit_admin_test_path(test),
                data: { test_id: test.id },
                class: "btn btn-secondary btn-sm form-inline-link" %>
  </td>
  <td class="text-center"><%= link_to t('helpers.delete'), admin_test_path(test), class: "btn btn-danger btn-sm", method: :delete, data: { confirm:  t('helpers.delete_confirmation') } %></td>
</tr>
