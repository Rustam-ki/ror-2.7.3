<tr>
  <td scope="col" class="text-center"><%= badge.title %></td>
  <td scope="col" class="text-center"><%= image_tag badge.image, size: "50x50" %></td>
  <td scope="col" class="text-center"><%= badge.rule %></td>
  <td scope="col" class="text-center"><%= badge.value %></td>
  <td scope="col" class="text-center"><%= link_to 'Show', admin_badge_path(badge) %></td>
  <td scope="col" class="text-center"><%= link_to 'Edit', edit_admin_badge_path(badge) %></td>
  <td scope="col" class="text-center">
    <%= link_to 'Delete',
                admin_badge_path(badge),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
  </td>
</tr>