<%= form_with model: [:admin, @badge], local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :rule %><br>
    <%= form.text_field :rule %>
  </p>

  <p>
    <%= form.label :option %>
    <%= form.text_field :option %>
  </p>

  <p>
    <%= form.label :image %><br>
    <%= form.file_field :image%>
  </p>

  <p> <%= form.submit %> </p>
<% end %>
